<h1><% @users.first %></h1>

<%#<h1>Users List</h1>%>
<%= render '/shared/title', title: '使用者清單' %>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th>Age</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.bio %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-info' %></td>
        <%#<% if logged_in? %>
        <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
        <%#<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'new', '/users/new', class:"btn btn-info" %>
<%= link_to 'users list',users_path %>

<br>

  <%= paginate @users %>

